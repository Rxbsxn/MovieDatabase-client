{{#bs-form formLayout=formLayout model=this onSubmit=(action "submit") as |form|}}
  {{form.element controlType="name" label="Name" placeholder="Movie name" property="name" required=true}}
  {{form.element controlType="number" label="Revenue" placeholder="Movie revenue" property="revenue" required=true}}

  {{#power-select
  selected=selectedGenre
  options=genres
  onchange=(action "chooseGenre")
  as |genre|
  }}
    {{genre.name}}
  {{/power-select}}

  {{bs-button defaultText="Submit" type="primary" buttonType="submit"}}
{{/bs-form}}
