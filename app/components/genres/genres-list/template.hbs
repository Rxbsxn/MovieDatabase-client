<div class="page-header">
  <h1>Genres</h1>
</div>

{{#each model as |genre|}}
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Movies</th>
    </tr>
  </thead>
  <tbody>
    {{genres/genres-list/genre genre=genre removeGenre=(action "removeGenre")}}
  </tbody>
</table>
{{else}}
No genres found
{{/each}}
