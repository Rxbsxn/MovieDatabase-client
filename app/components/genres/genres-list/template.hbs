<div class="page-header">
  <h1>Genres</h1>
</div>

{{#bs-button active=notCollapsed onClick=(action "toggle")}}
  {{#if collapsed}}
    Add new genre
  {{else}}
    Cancel
  {{/if}}
{{/bs-button}}

<hr>

{{#bs-collapse collapsed=collapsed}}
  {{genres/genres-list/new toggleAdding=(action 'toggleAdding')}}
{{/bs-collapse}}

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Movies</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |genre|}}
    {{genres/genres-list/genre genre=genre removeGenre=(action "removeGenre")}}
  {{else}}
    No genres found
  {{/each}}
  </tbody>
</table>
