<div class="page-header">
  <h1>Actors</h1>
</div>

{{#bs-button active=notCollapsed onClick=(action "toggle")}}
  {{#if collapsed}}
    Add new actor
  {{else}}
    Cancel
  {{/if}}
{{/bs-button}}

<hr>

{{#bs-collapse collapsed=collapsed}}
  {{actors/actors-list/new toggle=(action 'toggle')}}
{{/bs-collapse}}

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Movies</th>
    </tr>
  </thead>
  <tbody>
      {{#each actors as |actor|}}
        {{actors/actors-list/actor actor=actor removeActor=(action "removeActor")}}
      {{/each}}
  </tbody>
</table>
